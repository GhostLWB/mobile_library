<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgroundxml"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="欢迎使用图书馆管理系统"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:id="@+id/textView1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout3"
        android:orientation="vertical" 
        android:weightSum="1">

        <ImageButton
            android:id="@+id/videoBorrow"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_borrow"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/nameVideo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="视频名称:"
            android:textColor="#000000"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/IDVideo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频编号:"
            android:textColor="#000000"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/publishTimeVideo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="出版日期:"
            android:textColor="#000000"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/authordVideo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频作者:"
            android:textColor="#000000"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/catalogVideo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频分类:"
            android:textColor="#000000"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/timeVideo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="视频时长:"
            android:textColor="#000000"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/isAvailableVideo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="可借状态:"
            android:textColor="#000000"
            android:textSize="27dp" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/backgroundxml"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">


        <ImageButton
            android:layout_width="100dp"
            android:background="@drawable/fir"
            android:layout_height="wrap_content"

            android:id="@+id/mainPageVideo1"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageButton9" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/list"
            android:id="@+id/listPageVideo1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/myPageVideo1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton9"
            android:background="@drawable/my" />

    </RelativeLayout>

</RelativeLayout>