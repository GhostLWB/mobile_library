<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgroundxml"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/backgroundxml" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="欢迎使用图书馆管理系统"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout3"
        android:layout_above="@+id/linearlayout">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#e4e4e4"
            android:layout_marginTop="40dp"
            android:layout_height="50dp"
            android:weightSum="1"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:id="@+id/idTextViewMy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201514"
                android:textSize="30dp"
                android:textColor="#a29696"
                android:id="@+id/idContentMy"
                android:layout_weight="0.10"
                android:layout_marginRight="45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relativeLayout"
            android:background="#e4e4e4"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"
                android:textColor="#000000"
                android:id="@+id/userName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你是智障"
                android:id="@+id/userNameContent"
                android:textSize="30dp"
                android:textColor="#a29696"
                android:layout_marginRight="45dp"
                android:layout_alignTop="@+id/textView24"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#e4e4e4"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="30dp"
                android:textColor="#000000"
                android:id="@+id/textView26"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_marginTop="75dp"
            android:layout_height="100dp"
            android:text="    =!我要做最好的管理员!="
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#e4e4e4"
            android:id="@+id/textView27"
            android:layout_below="@+id/relativeLayout3"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#cc3333"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/mainPageButtonMy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageButton9"
            android:background="@drawable/fir" />

        <ImageButton
            android:id="@+id/listPageButtonMy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/list" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton9"
            android:background="@drawable/my1" />

    </RelativeLayout>

</RelativeLayout>